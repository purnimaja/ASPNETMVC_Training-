@using WebApplication1.Models;
@model  Album
@{
    ViewBag.Title = "AddAlbum";
    Layout = "~/Views/MasterView_Layout.cshtml";
}

<h2>AddAlbum</h2>

<div class="container-fluid">
    <div class="panel panel-primary">

    <div class="panel-heading">
        <h3 align="center">Add a new Album</h3>
        </div>
         <div class="panel-body">
        @using (Html.BeginForm())
        {
        <p>
            Album id:
            @Html.TextBoxFor(a => a.albumid)
            </p>
        <p>
            Album name:
            @Html.TextBoxFor(a => a.albumname)
        </p>
            MusicStoreDbEntities c = new MusicStoreDbEntities();
            SelectList allgeneres = new SelectList(c.Generes,"genereid","generename");
            SelectList allartists = new SelectList(c.Artists, "artistid", "artistname");
         <p>Genere : @Html.DropDownListFor(a=>a.genereid, allgeneres)</p>

          <p>Artist : @Html.DropDownListFor(a => a.artistid, allartists)</p>
        <button type="submit" class="btn btn-primary">Save Album Details</button>

        }
            
        </div>
    </div>
</div>