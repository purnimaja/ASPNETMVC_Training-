@using WebApplication1.Models;
@model List<Album>
@{
    ViewBag.Title = "AllAlbums";
    Layout = "~/Views/MasterView_Layout.cshtml";
}

<h2>AllAlbums</h2>

<div class="container-fluid">
    <div class="panel panel-primary">
        <div class="panel-heading">
            <h3 align="center">Album List</h3>
            </div>
    <div class="panel-body">
        <table class="table table-hover">
            <thead>
                <tr>
                    <th>Album Id</th>
                    <th>Album Name</th>
                    <th>Artistid</th>
                    <th>Generename</th>
                    <th align="center"> Edit Genere</th>
                    <th align="center">   Delete Genere  </th>
                <tr>

                </thead>
            @foreach(Album a in Model)
              {

            <tr>
                <td>@a.albumid</td>
                <td>@a.albumname</td>
                <td>@a.Artist.artistid</td>
                <td>@a.Genere.generename</td>
                <td>@Html.ActionLink("Edit","EditAlbum", "StoreManager", new {albumid =@a.albumid },null)</td>
                <td>@Html.ActionLink("Delete", "DeleteAlbum", "StoreManager", new { albumid = @a.albumid }, null)</td>
                @*<td><button type="submit">Delete</button></td>*@
          </tr>
     
           }
            </table>
        <br/>
        @Html.ActionLink("Create New Album...","AddAlbum","StoreManager")
</div>
</div>
</div>